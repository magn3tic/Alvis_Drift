<div class="dare-to-be-true" loading="lazy" style="background-image: url({{ section.settings.dare-to-be-true-bg | img_url: 'large'}});">    
    <div class="sec-inner">
        <div class="container">  
            <div class="marquee-wrap">
                <div class="marquee">
                    <div class="marquee-t">{{ section.settings.marquee-t-1}}</div>
                </div>          
                <div class="marquee marquee2">
                    <div class="marquee-t">{{ section.settings.marquee-t-2}}</div>
                </div>  
            </div>        
            <div class="dare-to-be-true-bx about_background">
                <img src="{{ section.settings.dare-to-be-true-bx | img_url: 'large'}}" alt="" loading="lazy">
            </div>           
        </div>
    </div>
</div>

