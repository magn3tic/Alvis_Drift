{% schema %}
  {
    "name": "Text Scroller",
    "settings": [
	  {
        "type": "image_picker",
        "id": "dare-to-be-true-bg",
        "label": "Background Image"
      },
	  {
        "type": "image_picker",
        "id": "dare-to-be-true-bx",
        "label": "Overlay Image"
      },
	  {
        "type": "text",
        "id": "marquee-t-1",
        "label": "Scrolling Text 1"
      },
      {
        "type":"select",
        "id": "marquee-font-size",
        "label":"Text Font Size",
        "default": "128",
        "options": [
              {
                "label": "Small",
                "value": "75"
              },
          {
                "label": "Medium",
                "value": "90"
              },
          {
                "label": "Large",
                "value": "128"
              }
        ]
      },
	  {
        "type": "text",
        "id": "marquee-t-2",
        "label": "Scrolling Text 2"
      }
],
  "presets": [
    {
      "name": "Text Scroller"
    }
  ]
  }
{% endschema %}

