<section class = "page-width page-width--narrow background-form">
  <div class = "background-inner">
  <div class = "topsection">
    <h2 class = "form-header">{{ section.settings.heading }}</h2>
    <p class = "form-text">{{ section.settings.paragraph }}</p>
  </div>
  <div class = "forms">
    {% form 'contact' %}
      {% if form.errors %}
       {{ form.errors | default_errors }}
      {% endif %} 
    
    <form action="/contact" method="post" class="contact-form">
      
   <div class=" form-row first-name">
    <label for="first-name">NAME</label>
    <input type="text" name="contact[first_name]" id="first-name"required />
  </div>
 {% if section.settings.show_surname %}   
  <div class=" form-row last-name">
    <label for="last-name">SURNAME</label>
    <input type="text" name="contact[surname]" id="last-name"required />
  </div>
{% endif %}  
       {% if section.settings.show_email %}   
  <div class=" form-row email">
    <label for="email">EMAIL ADDRESS</label>
    <input type="email" name="contact[email]" id="email" required/>
  </div>
  {% endif %}
  {% if section.settings.show_contact %}   
  <div class = "form-row">
    <label  for="contactnumber">CONTACT NUMBER</label>
    <input type="tel" name="contact[phone]" id="contactnumber" required>
  </div>
  {% endif %}
     {% if section.settings.show_message %}   
  <div class = "form-row">
    <label for="contactMessage">MESSAGE</label>
    <textarea name="contact[message]" id="contactMessage" required style = "width:100%;height:auto" rows="8"></textarea>
  </div>
    {% endif %}  
  <div class="form-button">
    <input type="submit" value="SUBMIT" />
  </div>       
    </form>
    {% endform %}
  </div>
  </div>
</section>

<style>
.background-form{
  background-color: {{ section.settings.color_background }};
  width:{{ section.settings.form_width }};
  margin: 100px auto
}
  .background-inner{
    background-color: {{ section.settings.color_background_inner }};
    padding:30px;
    border-radius: 3px;
  }
  .topsection{
    text-align:center;
    padding:10px 30px
  }
.form-header{
  color: {{ section.settings.color_header }}
}
.form-text{
  color: {{ section.settings.color_text }}
}
.form-button input{
  background-color: {{ section.settings.color_button }};
  border: 1px solid {{ section.settings.color_button }};
  color: #ffffff;
  width:100%;
  font-weight:600;
  letter-spacing:.2rem;
  margin-top:10px;
  padding-bottom:15px;
}
.form-button input:hover{
  background-color: {{ section.settings.color_button_hover }};
  border:none;
}
  
</style>
{% schema %}
  {
    "name": " Form",
    "settings": [
      {
      "type":"color",
      "id": "color_background",
      "label": "Background color",
      "default": "#480115"
      },
      {
      "type":"color",
      "id": "color_background_inner",
      "label": " form Background color (Inner)"
      },
      {
      "type":"select",
      "id": "form_width",
      "label": "Form size",
      "default": "50%",
        "options":[
          {
          "label":"Small",
          "value":"30%"
          },
          {
          "label":"Medium",
          "value":"50%"
          },
          {
          "label":"Large",
          "value":"100%"
          }
        ]
      },
      {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Form Title"
    },
    {
      "type":"color",
      "id": "color_header",
      "label": "Heading color",
      "default": "#f3f3f3"
    },
    {
      "type": "richtext",
      "id": "paragraph",
      "label": "Intro Text",
      "default": "<p>We're a working farm and not open to the public. However, we can sometimes accommodate special wine tasting requests.</p>"
    },
      {
      "type":"color",
      "id": "color_text",
      "label": "Text Colour",
      "default": "#f3f3f3"
    },
      {
      "type":"color",
      "id": "color_button",
      "label": "Button Background Colour"
    },
      {
      "type":"color",
      "id": "color_button_hover",
      "label": "Button Hover Colour",
      "default": "#f69d6f"
    },
      {
       "type": "checkbox",
        "id": "show_surname",
        "label": "Show Surname Input",
        "default": true
      },
      {
       "type": "checkbox",
        "id": "show_email",
        "label": "Show Email Input",
        "default": true
      },
      {
       "type": "checkbox",
        "id": "show_contact",
        "label": "Show Contact Input",
        "default": true
      },
      {
       "type": "checkbox",
        "id": "show_message",
        "label": "Show Message Input",
        "default": true
      }
    ],
    "presets": [
    {
      "name": "Custom Form"
    }
  ]
    
  }
{% endschema %}