<div class="wine-club bg-overlay bg-overlay-bg" loading="lazy" style="+margin-top: -200px; background-image: url({{ section.settings.wine-club-bg | img_url: 'master'}});" >  
    {% if section.settings.image_overlay %}
    <div class="bg-overlay-fliter"></div>
    {% endif %}
    <div class="sec-inner">
        <div class="bg-overlay-content-wrapper">
            <img src="" class="bg-overlay-bg" alt="" loading="lazy">
            <div class="container">
                <div class="bg-overlay-content br-cut">
                    <h2 style="color:{{ section.settings.Heading_color }};">{{ section.settings.title }}</h2>
                    <p style="color:{{ section.settings.Heading_color }};font-size: 16px;">{{ section.settings.detail-box-txt }}</p>
                    <a href="{{ section.settings.btn-url }}" class="alvisBtn alvisBtn--orange">{{ section.settings.btn-txt }}</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
  
  .bg-overlay-content-wrapper .br-cut h2 {
    opacity: 1;
  }
  
  .bg-overlay-content-wrapper .br-cut p {
    opacity: 1;
  }
  
  .bg-overlay-fliter {
    opacity: 1;
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    display: block!important;
    background-color: rgba(0,0,0,0.4);
  }
  
</style>

