            "id": "article_content",
            "label": "Content"
          },
		  {	
            "type": "url",
            "id": "artilce_link",
            "label": "Link"
          }
		]
	  }
      
	],
    "presets": [
      {
        "name": "Blog Internal",
      	"category": "Blog",
        "blocks": [
          {
            "type": "item"
          }
        ]
      }
    ]
  }
{% endschema %}

