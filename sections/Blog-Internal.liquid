
<section class="alvis-drift-awarded video-sec bg-olive blog_internal_section">
  <div class="sec-inner">
      <div class="container">
          <div class="video-sec-inner">
              <div class="video-sec-vid">
                  <div class="story-vid-block">
                  {%- for block in section.blocks -%}
<!--                       <img src="{{ section.settings.article_image_1 | img_url:"master" }};" class="video-sec-vid-img br-cut" alt="" > -->
                                <img class="video-sec-vid-img br-cut{% unless forloop.index == 1 %} hidden{% endunless %}" data-article-bg-img="article-{{ forloop.index }}" src="{{ block.settings.article_image_1 | img_url:"master" }}" alt="{{ block.settings.article_image_1.alt }}" loading="lazy">
        
                    {%- endfor -%}
  
                </div>
              </div>
              <div class="video-sec-content alvis-drift-awarded-content">
                          {%- for block in section.blocks -%}

                  <h2 class="desktop-show tablet-hide {% unless forloop.index == 1 %} hidden{% endunless %}">{{block.settings.article_text_1 | escape }}</h2>
                  <div class="video-sec-content-txt {% unless forloop.index == 1 %} hidden{% endunless %}">                        
                      <p>{{block.settings.article_content | replace: '<p>', '<p>'}}</p>
                  </div>
                  <a href="{{block.settings.artilce_link}}" class="btn btn-overlay{% unless forloop.index == 1 %} hidden{% endunless %}">View all</a>
                                              {%- endfor -%}

                  <div class="nd-bx-wrap">
                    <div class="nd-bx-s">                      
                      <div class="nd-bx">
                                          {%- for block in section.blocks -%}
                        {% if forloop.index == 2 %}
                        <img src="{{ block.settings.article_image_1 | img_url:"master" }};" class="video-sec-vid-img br-cut2" alt=""loading="lazy">
                        {% endif %}

                        <div class="nd-bx-no">                        {% if forloop.index == 2 %}
02                        {% endif %}</div>
                                                {%- endfor -%}

                      </div>
                      <div class="nd-bx desktop-hide tablet-show">
                        <img src="{{ section.settings.article_image_1 | img_url:"master" }};" class="video-sec-vid-img br-cut2" alt="" loading="lazy">
                        <div class="nd-bx-no">{{section.settings.article_text_1}}</div>
                      </div>
                    </div> 
                    <div class="nd-bx-btn-wrap">
                      {%- for block in section.blocks -%}
                         {% if forloop.index == 2 %}
						
                      <div class="cotnetn_sectiona">
                      	
                        <h3>{{ block.settings.article_text_1}}</h3>
                      
                         {{ block.settings.article_content }}
                        
                         <a href="{{section.settings.artilce_link}}" class="btn btn-overlay">View All</a></div>
                        
                      </div>
                      
                      
                         {% endif %}
                      {% endfor %} 
                      </div>

              </div>
          </div>
      </div>
  </div>
</section>


